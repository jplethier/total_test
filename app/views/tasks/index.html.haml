%ul.tasks
  = render @tasks

.box.right
  %h2 New Task
  = form_for @new_task, remote: true do |f|
    .field
      = f.label :name
      %br
      = f.text_field :name

    .field
      = f.label :due_date
      %br
      = f.text_field :due_date

    .field
      = f.submit 'Add', class: 'confirm'

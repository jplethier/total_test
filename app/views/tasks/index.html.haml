.left
  %h1 My Tasks
  .filters
    Order by:
    = link_to 'Due Date', tasks_path + '?order_by=due_date', remote: true
    = link_to 'Priority', tasks_path + '?order_by=priority', remote: true
  %ul.tasks
    = render @tasks

.box.right
  %h2 New Task
  = form_for @new_task, remote: true do |f|
    .field
      = f.label :name
      %br
      = f.text_field :name

    .field
      = f.label :due_date
      %br
      = f.text_field :due_date

    .field
      = f.label :priority
      %br
      = f.select :priority, (1..10).to_a

    .field
      = f.submit 'Add', class: 'confirm'
